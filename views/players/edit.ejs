<% include ../partials/header %>
<div class="row">
       <h1 style="text-align: center;">Edit <%= player.firstName %> <%= player.lastName%></h1>
       <div style="width: 30%; margin: 30px auto;">
           <form action="/players/<%= player._id %>?_method=PUT" method="POST">
               <div class="form-group">
                   <input class="form-control" type="text" name="player[username]" value="<%= player.username %>">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="player[firstName]" value="<%= player.firstName %>">
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="player[lastName]" value="<%= player.lastName %>">
               </div>
                <div class="form-group">
                   <input class="form-control" type="text" name="player[email]" value="<%= player.email %>">
               </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="player[rank]" value="<%= player.rank%>">
                </div>
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
        </form>
        <a href="/players">Go Back</a>
       </div>
         
    </div>
<% include ../partials/footer %>