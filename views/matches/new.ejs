<% include ../partials/header %>
<div class="row">
       <h1 style="text-align: center;">Submit a Challenge to <%=player.firstName%> <%=player.lastName%> </h1>
       <div style="width: 30%; margin: 30px auto;">
           <form action="/players/<%=player._id%>/matches" method="POST">
               <div class="form-group">
                   <input class="form-control" type="text" name="comment" placeholder="Suggested day/time">
               </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
        </form>
        <a href="/players">Go Back</a>
       </div>
        

